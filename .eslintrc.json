{
    "parser": "babel-eslint",
    "plugins": [
        "flowtype"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "flowtype/define-flow-type": 1,
        "flowtype/use-flow-type": 1
    }
}