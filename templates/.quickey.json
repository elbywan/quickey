            { "name": "pattern", "message": "Search pattern" },
            { "name": "directory", "message": "Directory to search in" }
        ],
        "shell": "find {{directory}} -name \"*{{pattern}}*\""
    },
    {
        "label": "Lists",
        "description": "Various commands related to listing files.",
        "fromArray": [
            {
                "label": "List visible files.",
                "shell": "ls"
